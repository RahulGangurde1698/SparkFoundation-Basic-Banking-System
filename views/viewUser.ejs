                        <div class="form-group my-3">
                            <label for="exampleInputPassword1 fw-bold">To</label>
                            <select class="form-control" id="exampleFormControlSelect1" name="username">
                                <option>Select User</option>
                                <% data.forEach((row)=> {%>
                                    <option>
                                        <%= row.name %>
                                    </option>
                                    <%}) %>

